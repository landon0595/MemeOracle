<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MemeOracleUI.NewPage1"
             Title="Reddit Meme Generator">

    <VerticalStackLayout>

        <Label
            Text="Generate the Memes!"
            FontSize="Header"
            FontFamily="ArcadeClassic"
            Padding="100"
            VerticalOptions="Center" 
            HorizontalOptions="Center"/>

        <Button
            Text="Back"
            TextColor="White"
            FontFamily="ArcadeClassic"
            FontSize="Medium"
            CharacterSpacing="1"
            Padding="10"
            Margin="0,-55,0,30"
            BackgroundColor="Black"
            VerticalOptions="Center"
            HorizontalOptions="Center"
            Clicked="BackButton_Clicked"/>

        <Button
            Text="Past 7 days"
            TextColor="White"
            FontFamily="ArcadeClassic"
            FontSize="Medium"
            CharacterSpacing="1"
            Padding="25"
            Margin="15"
            BackgroundColor="{DynamicResource RedditColor}"
            VerticalOptions="Center"
            HorizontalOptions="Center"
            Clicked="Button_Clicked"/>
        
            <Button
            Text="Past Month"
            TextColor="White"
            FontFamily="ArcadeClassic"
            FontSize="Medium"
            CharacterSpacing="1"
            Padding="25"
            Margin="15"
            BackgroundColor="{DynamicResource RedditColor}"
            VerticalOptions="Center"
            HorizontalOptions="Center"
            Clicked="Button_Clicked"/>
        
            <Button
            Text="Past Year"
            TextColor="White"
            FontFamily="ArcadeClassic"
            FontSize="Medium"
            CharacterSpacing="2"
            Padding="25"
            Margin="15"
            BackgroundColor="{DynamicResource RedditColor}"
            VerticalOptions="Center"
            HorizontalOptions="Center"
            Clicked="Button_Clicked"/>

            <Image
                Source="redditicon.png"
                HeightRequest="150"
                Margin="10,-150,10,0"
                HorizontalOptions="End"                
                SemanticProperties.Description="Official Reddit Icon" />

    </VerticalStackLayout>

    
</ContentPage>